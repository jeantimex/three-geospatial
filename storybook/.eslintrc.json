{
  "extends": [
    "plugin:@nx/react",
    "plugin:storybook/recommended",
    "../.eslintrc.json"
  ],
  "ignorePatterns": ["!**/*", "storybook-static", "node_modules", ".storybook"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "react/display-name": "error"
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
